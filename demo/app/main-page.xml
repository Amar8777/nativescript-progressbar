<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <StackLayout xmlns:pb="nativescript-progressbar">
    <Button text="TAP" tap="{{ tapAction }}" />
    <Label text="{{ message }}" class="message" textWrap="true"/>

    <TabView>
        <TabView.items>
            <TabViewItem title="CircleProgressBar">
                <TabViewItem.view>
                    <pb:CircleProgressBar
                        progress="{{progress}}"
                        text="{{message}}"
                        textSize="50"
                        widthProgressBackground="20"
                        widthProgressBarLine="50"
                        backgroundColor="red"
                        progressColor="blue"
                        linearGradient="false"
                        width="200"
                    />
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="CircleSegmentBar">
                <TabViewItem.view>
                    <pb:CircleSegmentBar
                        progress="{{progress}}"
                        text="{{message}}"
                        textSize="50"
                        widthProgressBackground="20"
                        widthProgressBarLine="50"
                        backgroundColor="red"
                        progressColor="blue"
                        linearGradient="false"
                        width="200"
                    />
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="ArcProgressBar">
                <TabViewItem.view>
                    <pb:ArcProgressBar
                        progress="{{progress}}"
                        text="{{message}}"
                        textSize="50"
                        widthProgressBackground="20"
                        widthProgressBarLine="50"
                        backgroundColor="red"
                        progressColor="blue"
                        width="200"
                    />
                </TabViewItem.view>
            </TabViewItem>
            <TabViewItem title="LineProgressBar">
                <TabViewItem.view>
                    <pb:LineProgressBar
                        progress="{{progress}}"
                        text="{{message}}"
                        textSize="50"
                        widthProgressBackground="20"
                        widthProgressBarLine="50"
                        backgroundColor="red"
                        progressColor="blue"
                        linearGradient="false"
                        width="200"
                    />
                </TabViewItem.view>
            </TabViewItem>
        </TabView.items>
    </TabView>
  </StackLayout>
</Page>
